{
    "$schema": "http://json-schema.org/schema#",
    "title": "AutoSuggest",
    "description": "An auto suggest component's schema definition.",
    "type": "object",
    "id": "auto-suggest",
    "properties": {
        "placeholder": {
            "title": "Placeholder",
            "type": "string"
        },
        "name": {
            "title": "Name",
            "type": "string"
        },
        "disabled": {
            "title": "Disabled",
            "type": "boolean"
        },
        "isMenuOpen": {
            "title": "Is menu open",
            "type": "boolean"
    },
    "reactProperties": {
        "children": {
            "title": "Building blocks",
            "type": "children",
            "defaults": [
                "text"
            ]
        }
    }
}
